{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": ["src/**/*", "src/@types/**/*"], 
  "exclude": ["node_modules"]
}
